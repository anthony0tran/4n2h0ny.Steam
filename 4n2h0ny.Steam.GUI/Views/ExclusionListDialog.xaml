<Window x:Class="_4n2h0ny.Steam.GUI.Views.ExclusionListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4n2h0ny.Steam.GUI.Views"
        mc:Ignorable="d"
        Title="Exclusion list" Height="450" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid Width="350" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <ListBox x:Name="exclusionListBox" Margin="15,10,15,0" />
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Grid.Row="1" Margin="15,0,15,0">
            <Button x:Name="addExclutionProfileBtn" Content="ADD" Height="30" Grid.Column="0" Margin="0,0,5,5" Background="#FF37EF5C" Width="155"/>
            <Button x:Name="deleteExclutionProfileBtn" Content="DELETE" Height="30" Margin="5,0,0,5" Background="#FFFF4C4C" Width="155"/>
        </StackPanel>
    </Grid>
</Window>
