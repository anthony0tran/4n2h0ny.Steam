<Window x:Class="_4n2h0ny.Steam.GUI.Views.UrlInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4n2h0ny.Steam.GUI.Views"
        mc:Ignorable="d"
        Title="Add to exclusion list" Height="140" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <Label x:Name="label" Content="URL to exclude" HorizontalAlignment="Left" Margin="10,0,10,0" VerticalAlignment="Top"/>
            <TextBox x:Name="urlTxtBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="10,0,10,0" Width="260" TextWrapping="Wrap" />
        </StackPanel>
        <Button x:Name="okBtn" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Height="30" Width="75" Margin="0,0,10,0" Click="OkBtn_Click" />
        <Button x:Name="cancelBtn" Content="CANCEL" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Height="30" Width="75" Margin="0,0,90,0" Click="CancelBtn_Click"/>


    </Grid>
</Window>
